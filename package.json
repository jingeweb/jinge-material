{
  "name": "jinge-material",
  "version": "3.0.0",
  "description": "A material design ui library implemented with jinge mvvm framework",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "wp": "webpack --config ./webpack.config.js",
    "start": "npm run dev",
    "dev": "node ./script/site-dev-serve.js",
    "build-site-dev": "node ./script/site-build-dev.js",
    "build-site": "node ./script/site-build-prod.js",
    "build": "rm -rf ./dist && NO_COMPRESS=true npm run build-lib && npm run build-lib",
    "build-lib": "node ./script/build.js",
    "update-icons": "node ./script/update_icons.js",
    "eslint": "eslint './{src,site,compiler,script}/**/*.js' --fix",
    "stylelint": "stylelint './{src,style,site}/**/*.scss' --fix",
    "lint": "npm run eslint && npm run stylelint",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YuhangGe/jinge-material.git"
  },
  "keywords": [
    "material",
    "ui",
    "library",
    "jinge"
  ],
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.scss": "stylelint --fix"
  },
  "author": "Yuhang Ge <abeyuhang@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/YuhangGe/jinge-material/issues"
  },
  "homepage": "https://github.com/YuhangGe/jinge-material#readme",
  "peerDependencies": {
    "jinge": "^3.0.1"
  },
  "devDependencies": {
    "clean-css": "^5.2.2",
    "clipboard": "^2.0.8",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.5.1",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.0",
    "highlight.js": "^11.3.1",
    "html-minifier": "^4.0.0",
    "https-proxy-agent": "^5.0.0",
    "husky": "^7.0.4",
    "jinge": "^3.0.1",
    "jinge-router": "^3.0.0",
    "lint-staged": "^11.2.6",
    "lodash-es": "^4.17.15",
    "mini-css-extract-plugin": "^2.4.4",
    "postcss": "^7.0.36",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.4.1",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "single-line-log": "^1.1.2",
    "stylelint": "^14.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^2.0.1",
    "stylelint-prettier": "^2.0.0",
    "terser": "^5.9.0",
    "terser-webpack-plugin": "^5.2.5",
    "webpack": "^5.62.1",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.2"
  }
}
